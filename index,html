    <script type="module">
        import * as THREE from 'three';
        import { OrbitControls } from 'three/addons/controls/OrbitControls.js';

        let scene, camera, renderer, controls, buildingGroup;

        // "×××’×¨ × ×ª×•× ×™×" ××“××” - × ×™×ª×Ÿ ×œ×”×¨×—×™×‘ ×›×ª×•×‘×•×ª × ×•×¡×¤×•×ª ×›××Ÿ
        const mockDatabase = {
            "×¢×•× ×•×ª ×”×©× ×” 5, × ×¡ ×¦×™×•× ×”": {
                floors: 6,
                units: 14,
                pop: "50-60 ×“×™×™×¨×™×",
                safety: "××\"×“ ×‘×›×œ ×“×™×¨×”, ×œ×™×‘×ª ×‘×˜×•×Ÿ",
                access: "×¨×—×•×‘ ×”×•×œ× ×“×™, ×’×™×©×” ×œ×× ×•×£ ×’×‘×”×™× ×‘×—×–×™×ª"
            },
            "×¢×•× ×•×ª ×”×©× ×” 3, × ×¡ ×¦×™×•× ×”": {
                floors: 5,
                units: 12,
                pop: "40-45 ×“×™×™×¨×™×",
                safety: "××\"×“ ×‘×›×œ ×“×™×¨×”",
                access: "×’×™×©×” ×§×“××™×ª ×‘×œ×‘×“"
            }
        };

        function initScene() {
            scene = new THREE.Scene();
            scene.background = new THREE.Color(0x0a0a0a);

            camera = new THREE.PerspectiveCamera(50, window.innerWidth / window.innerHeight, 0.1, 1000);
            camera.position.set(40, 30, 40);

            renderer = new THREE.WebGLRenderer({ antialias: true });
            renderer.setSize(window.innerWidth, window.innerHeight);
            renderer.setPixelRatio(window.devicePixelRatio);
            document.body.appendChild(renderer.domElement);

            controls = new OrbitControls(camera, renderer.domElement);
            controls.enableDamping = true;

            const light1 = new THREE.PointLight(0xffffff, 1);
            light1.position.set(50, 50, 50);
            scene.add(light1);
            scene.add(new THREE.AmbientLight(0x404040, 2));

            buildingGroup = new THREE.Group();
            scene.add(buildingGroup);

            window.addEventListener('resize', () => {
                camera.aspect = window.innerWidth / window.innerHeight;
                camera.updateProjectionMatrix();
                renderer.setSize(window.innerWidth, window.innerHeight);
            });

            animate();
        }

        function animate() {
            requestAnimationFrame(animate);
            if (controls) controls.update();
            if (renderer) renderer.render(scene, camera);
        }

        function createBuildingModel(data) {
            buildingGroup.clear();
            
            const floorH = 3.2;
            const floors = data.floors + 1; // + ×œ×•×‘×™
            const bW = 18;
            const bD = 14;

            // ×œ×™×‘×” (××“×•×)
            const coreGeo = new THREE.BoxGeometry(5, floors * floorH, 5);
            const coreMat = new THREE.MeshPhongMaterial({ color: 0xff0000, transparent: true, opacity: 0.75, emissive: 0x330000 });
            const core = new THREE.Mesh(coreGeo, coreMat);
            core.position.y = (floors * floorH) / 2;
            core.position.x = -2;
            buildingGroup.add(core);

            // ×§×•××•×ª
            const skeletonMat = new THREE.MeshPhongMaterial({ color: 0xcccccc, transparent: true, opacity: 0.12 });
            for (let i = 0; i < floors; i++) {
                const fGeo = new THREE.BoxGeometry(bW, 0.1, bD);
                const f = new THREE.Mesh(fGeo, skeletonMat);
                f.position.y = i * floorH;
                buildingGroup.add(f);

                // ××¨×¤×¡×•×ª ×—×™×œ×•×¥ (×›×—×•×œ)
                const balcGeo = new THREE.BoxGeometry(6, 0.2, 3);
                const balcMat = new THREE.MeshPhongMaterial({ color: 0x4444ff, transparent: true, opacity: 0.5 });
                const bFront = new THREE.Mesh(balcGeo, balcMat);
                bFront.position.set(5, i * floorH + 0.1, bD/2 + 1.5);
                buildingGroup.add(bFront);
            }

            // ×›× ×™×¡×•×ª (×™×¨×•×§)
            const exitMat = new THREE.MeshPhongMaterial({ color: 0x00ff00, emissive: 0x002200 });
            const entry = new THREE.Mesh(new THREE.BoxGeometry(4, 3, 2), exitMat);
            entry.position.set(0, 1.5, bD/2 + 0.5);
            buildingGroup.add(entry);

            // ××¢×˜×¤×ª
            const shellGeo = new THREE.BoxGeometry(bW, floors * floorH, bD);
            const shell = new THREE.Mesh(shellGeo, new THREE.MeshPhongMaterial({
                color: 0xffffff, transparent: true, opacity: 0.05, side: THREE.DoubleSide
            }));
            shell.position.y = (floors * floorH) / 2;
            buildingGroup.add(shell);

            // ×’×¨×™×“ ×§×¨×§×¢
            const grid = new THREE.GridHelper(200, 50, 0x333333, 0x222222);
            scene.add(grid);

            camera.position.set(40, 30, 40);
            controls.reset();
        }

        // ×œ×•×’×™×§×ª ×—×™×¤×•×©
        const input = document.getElementById('address-input');
        const searchBtn = document.getElementById('search-btn');
        const welcome = document.getElementById('welcome-screen');
        const loading = document.getElementById('loading');
        const panels = document.getElementById('overlay-panels');
        const hint = document.getElementById('controls-hint');

        searchBtn.onclick = () => {
            const address = input.value.trim();
            if (!address) return;

            welcome.style.display = 'none';
            loading.style.display = 'block';
            panels.style.display = 'none';

            // ×¡×™××•×œ×¦×™×” ×©×œ ×—×™×¤×•×© ×‘×©×¨×ª
            setTimeout(() => {
                const data = mockDatabase[address] || {
                    floors: 4,
                    units: 8,
                    pop: "× ×ª×•× ×™× ×—×¡×¨×™×",
                    safety: "××™×’×•×Ÿ ×œ× ×™×“×•×¢",
                    access: "×’×™×©×” ×¨×’×™×œ×”"
                };

                // ×¢×“×›×•×Ÿ ×××©×§
                document.getElementById('building-title').innerText = address;
                document.getElementById('val-floors').innerText = data.floors;
                document.getElementById('val-units').innerText = data.units;
                document.getElementById('val-pop').innerText = data.pop;
                document.getElementById('val-safety').innerText = data.safety;
                document.getElementById('val-access').innerText = data.access;

                if (!scene) initScene();
                createBuildingModel(data);

                loading.style.display = 'none';
                panels.style.display = 'block';
                hint.style.display = 'block';
            }, 800);
        };

        // ×”××–× ×” ×œ××§×© Enter
        input.addEventListener('keypress', (e) => {
            if (e.key === 'Enter') searchBtn.click();
        });

    </script>
</body>
